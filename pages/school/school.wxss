/*school.wxss  */

.container {
 width: 100%
}
picker{ color: #999;font-size: 30rpx; display: inline-block; vertical-align: top; line-height: 85rpx;}
.class {
  width: 100%;
  box-sizing: border-box;
  justify-content: center;
  align-items: center; 
}

/* 筛选 */
.select_div{
    flex-direction: row;
    justify-content: space-around;
    box-sizing: border-box;
    color:#333; 
    background: #fff;
}
.switch_box{ margin-top: 10rpx}
.bot_b{ border-bottom: 1px solid #eee }
.top_select_box{width: 95%; padding: 0 2.5%}
.student_box{width: 95%; padding: 0 2.5%}
.select_div .tit{ 
  font-size: 30rpx; color:#666;
  flex-shrink: 0; max-width: 180rpx; box-sizing: border-box; padding-right: 10rpx; text-align: right; display: inline-block; vertical-align: top; line-height: 80rpx;
}
.top_select_box .select_div{ border-bottom: 1px solid #eee}

.select_box{
  background: #fff;
  width: 74%;
  margin: -3rpx auto;
  position: relative; display: inline-block; vertical-align:middle;
 line-height: 60rpx;
}
.mar{margin:16rpx auto 0 !important}
.select_box input{ font-size: 30rpx;}
.select{
  box-sizing: border-box;
  width: 100%;
  height: 60rpx;
  border:1px solid #ccc;
  border-radius: 10rpx;
  display: flex;
  align-items: center;
  padding: 10rpx 20rpx;
}
.select_text{
  font-size: 28rpx;
  flex: 1;
}
.select_img{
  width: 25rpx;
  height: 20rpx;
  display: block;
  transition:transform 0.3s;
}
.select_img_rotate{
  transform:rotate(180deg); 
}
.option_box{
  position: absolute;
  top: 58rpx;
  width: 100%;
  border:1px solid #ccc; border-width: 0 1px 1px 1px;
  box-sizing: border-box;
  height: 0;
  overflow-y: auto;
  border-top: 0;
  background: #fff;
  transition: height 0.3s;
}
.option{
  display: block;
  line-height: 40rpx;
  font-size: 28rpx;
  border-bottom: 1px solid #efefef;
  padding: 10rpx 16rpx;
}

.next {
  width: 100%;
  box-sizing: border-box;
  display: flex;
  justify-content: center;
  align-items: center;
}

.id {
  width: 100%;
  display: flex;
  justify-content: flex-start;
  align-items: flex-start;
  padding: 10rpx 0; border-bottom: 1px solid #eee
}

.id-label {
  font-size: 30rpx; color: #666;
  flex-shrink: 0;line-height: 60rpx; max-width: 180rpx; padding-right: 10rpx; text-align: right; box-sizing: border-box; display: inline-block; vertical-align: top
}
.id-content{ width: 70%}
.radio-group {
  justify-content: flex-start;
  align-items: center; height: 60rpx; line-height: 60rpx;
}
.radio{ padding-bottom: 10rpx; width: 20%; display: inline-block; vertical-align: top}
.radio-group .text{ font-size: 30rpx; line-height: 60rpx;}
.remark{ font-size: 30rpx; color: #666; border-top: 1px solid #eee;  line-height: 80rpx; }
.remark .remark-content{border-radius: 8rpx;border: 1px solid #eee; color: #666; width: 100%; padding: 14rpx; box-sizing: border-box  }

.student_box{ border-top: 20rpx solid #f5f5f5}
textarea{ position: inherit}