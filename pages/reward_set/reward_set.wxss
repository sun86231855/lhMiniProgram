/* pages/reward_set/reward_set.wxss */
picker{ color: #999;font-size: 30rpx; vertical-align: top;  display: inline-block; line-height: 60rpx; padding-left: 10rpx}
.container { margin: 2%; width: 96%;}
.theme,
.need {
  width: 100%;
  justify-content: flex-start;
  align-items: center;
  box-sizing: border-box;
 line-height: 60rpx; border-bottom: 1px solid #eeeeee; padding: 10rpx 0;
}
.need .iconfont{ font-weight: bold;}

.content {
  width: 100%;
  justify-content: flex-start;
  align-items: flex-start;
  box-sizing: border-box;
  margin-bottom: 10rpx;
}
.text{ color: #363636}
.content .content-label{}

.save {
  width: 100%;
}

.save-btn {
  width: 80%;
}

.theme-label,
.need-label,
.content-label {
  font-size:30rpx; line-height: 60rpx;
  flex-shrink: 0; color: #666666;
  max-width: 180rpx; box-sizing: border-box; text-align: right; display: inline-block; vertical-align: top;
}
.content-label{ padding: 10rpx 0;}
.need-label .text{ padding-left: 10rpx;}
.need-label .iconfont{ padding: 0 10rpx;}

.theme-input {
  border: none;
  border-radius: 10rpx;
  height: 60rpx;
  font-size: 30rpx; color: #999999;
  width: 74%; display: inline-block; vertical-align: top;
  box-sizing: border-box;
  padding-left: 10rpx;
}

.need-check {
  font-size: 28rpx; display: inline-block; vertical-align: top; border: 1px solid #ccc; line-height: 50rpx; padding: 0 10rpx; border-radius: 10rpx; color: #969696
}

.content-content {
  border: 1rpx solid #EEEEEE;
  border-radius: 10rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  padding:12rpx 0 0 10rpx; width: 100%; display: inline-block; vertical-align: top; color: #363636
}

.save {
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.save-btn {
  width: 80%;
  font-size: 28rpx;
  height: 50rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 10rpx;
  color: #fff;
  background-color: #e02e24;
}