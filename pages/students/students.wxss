/*students.wxss  */
.container {
  margin: 0;
  padding: 20rpx;
  box-sizing: border-box;
}
.class,
.progress {
  width: 100%;
  box-sizing: border-box;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  margin-bottom: 10rpx;
}



.progress-label,
.remark-label {
  flex-shrink: 0;
  font-size: 32rpx;
  margin-right: 10rpx;
}



.checkbox {
  font-size: 28rpx;
}

.remark {
  width: 100%;
  box-sizing: border-box;
  display: flex;
  justify-content: flex-start;
  align-items: flex-start;
  margin-bottom: 10rpx;
}

.remark-content {
  width: 100%;
  border: 1rpx solid #efefef;
  border-radius: 10rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  padding-left: 10rpx;
}
.sure {
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  box-sizing: border-box;
}

.sure-btn {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100rpx;
  position: fixed;
  left: 0;
  bottom: 0;
  z-index: 9999999999;
  width: 100%;
  background-color: #e02e24;
  color: #fff;
  font-size: 28rpx;
}
/* 筛选 */
.select_div{
    display:flex;
    flex-direction: row;
    justify-content: space-around;
    width:100%;
    box-sizing: border-box;
    color:#333;
    margin-bottom: 10rpx;
    background: #fff
}
.select_div, .progress, .remark{ padding-bottom: 20rpx;} 
.select_div .tit,
 .progress .progress-label,
 .remark .remark-label
 { 
  font-size: 30rpx;
  flex-shrink: 0;
  margin-right: 10rpx; width: 180rpx; padding-right: 10rpx; text-align: right; box-sizing: border-box; display: inline-block; vertical-align: top
}

.select_box{
  background: #fff;
  width: 100%;
  margin: -4rpx auto;
  position: relative;
}
.select{
  box-sizing: border-box;
  width: 100%;
  height: 50rpx;
  border:1px solid #efefef;
  border-radius: 10rpx;
  display: flex;
  align-items: center;
  padding: 10rpx 20rpx;
}
.select_text{
  font-size: 28rpx;
  flex: 1;
}
.select_img{
  width: 25rpx;
  height: 20rpx;
  display: block;
  transition:transform 0.3s;
}
.select_img_rotate{
  transform:rotate(180deg); 
}
.option_box{
  position: absolute;
  top: 47rpx;
  width: 100%;
  border:1px solid #efefef;
  box-sizing: border-box;
  height: 0;
  overflow-y: auto;
  border-top: 0;
  background: #fff;
  transition: height 0.3s;
}
.option{
  display: block;
  line-height: 40rpx;
  font-size: 28rpx;
  border-bottom: 1px solid #efefef;
  padding: 10rpx;
}