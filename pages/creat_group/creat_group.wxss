/*creat_group.wxss  */
page{ background: #fff}
.container{  padding: 20rpx 40rpx  20rpx 10rpx; margin:0rpx;box-sizing: border-box;}
.name,

.creat {
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  box-sizing: border-box;
}
.describe {
  width: 100%;
  display: flex;
  justify-content: flex-start;
  align-items: flex-start;
  margin-bottom: 10rpx;
}
.name {
  width: 100%;
  margin-bottom: 10rpx;
  display: flex;
  justify-content: flex-start;
}
.name-label,
.describe-label,
.creat-label {
  font-size: 30rpx; width: 180rpx; padding-right: 10rpx; box-sizing: border-box; display: inline-block; vertical-align: top; text-align: right
}
.name-input{height: 60rpx; line-height: 60rpx;}
.name-input,
.describe-text {
  border: 1rpx solid #ccc;
  font-size: 28rpx; 
  border-radius: 10rpx;  width: 75%; display: inline-block; vertical-align: top
}
.creat-btn {
 
}

/* 筛选 */
.select_div{
    flex-direction: row;
    justify-content: space-around;
    width:100%;
    box-sizing: border-box;
    padding:20rpx 0; line-height: 60rpx;
   
    background: #fff
}
.select_div .tit{ line-height: 60rpx; font-size: 30rpx; width: 180rpx; text-align: right; padding-right: 10rpx; box-sizing: border-box; display: inline-block; vertical-align: top}


.select_box{
  background: #fff;
  width: 74%; display: inline-block; vertical-align: top;
  margin: -3rpx auto;
  position: relative; z-index: 9;
}
.select{
  box-sizing: border-box;
  width: 100%;
  height: 70rpx;
  border:1px solid #ccc;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  padding: 0 20rpx; color: #969696
}
.select_text{
  font-size: 28rpx; color: #363636;
  flex: 1;
}
.select_img{
  width: 25rpx;
  height: 20rpx;
  display: block;
  transition:transform 0.3s;
}
.select_img_rotate{
  transform:rotate(180deg); 
}
.option_box{
  position: absolute;
  top: 68rpx;
  width: 100%;
  border:1px solid #ccc;
  border-width: 0 1px 1px 1px;
  box-sizing: border-box;
  height: 0;
  overflow-y: auto;
  border-top: 0;
  background: #fff;
  transition: height 0.3s;
}
.option{
  display: block;
  line-height: 40rpx;
  font-size: 28rpx; color: #363636;
  border-bottom: 1px solid #ccc;
  padding: 10rpx;
}
