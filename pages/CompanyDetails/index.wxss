/* pages/CompanyDetails/index.wxss */
.company_top{ background: #f5f5f5; padding-bottom: 10rpx;}
.slide-image{  width: 100%; height: 420rpx; position: absolute  }  
.container{ background:#fff;}
.ar_cont{padding:0; width: 100%; font-size:30rpx;  background: #fff;  margin-bottom:40rpx;  line-height: 45rpx;  color:#666666;}
.ar_cont .ar_cont_h1{font-size: 30rpx; font-weight: bold; color: #333; text-align: center; padding: 10rpx 0}
.border_b{ border-bottom: 1px solid #efefef; height: 70rpx; line-height: 70rpx;}
.border_nh{border-bottom: 1px solid #efefef;}
.user_list{  position: relative; padding: 0 3%}
.padding{padding: 10rpx 3% 0 3%;}
.company_list{ line-height: 50rpx; border-bottom: 1px solid #efefef}
.user_list .user_tit{ display: inline-block; vertical-align: top; font-size:26rpx; max-width: 35%; padding-right: 20rpx; box-sizing: border-box; text-align: right; color: #333}
.user_list .user_tit .ico{padding:0 10rpx 0 0;}
.photo .ico{padding:0 10rpx 0 0;}
.user_text{ font-size: 26rpx; display: inline-block; vertical-align: top; color: #333}
.ar_cont_tit{ font-size: 36rpx; font-weight: 600; color: #333; text-align: left; border-top: 2px solid #ddd; display: block; width: 100%; padding: 6px 0 0 0; margin: 6px 0 0 0}
.add{ float: right; font-size: 20px; font-weight: 600; position: absolute; right: 2%; top: 0;}
.phone{ float: right; font-size: 32rpx; font-weight: 600; position: absolute; right: 2%; top: 0;}
.phone_v{ padding: 10px 0}
.phone_v .image_v{ width: 25%; display: inline-block; vertical-align: top;  }
.phone_v .image_v image{ width: 50px; height: 50px}
.user_text.user_box .use_list { display: inline-block; vertical-align: top; margin-right: 10rpx; text-align: center; width: 100%; }
.user_text.user_box .use_list .text{ font-size: 24rpx; color: #333}
.user_text.user_box .use_list .img{ width: 60rpx; height: 60rpx; border-radius: 100rpx;} 

.company_news{ height: 80rpx; line-height: 80rpx; background: #fff;}
.company_news .list{ width: 25%; text-align: left; font-size: 30rpx; position: relative;padding-left:34rpx; font-weight: 600; color: #333;
 }
.company_d{ position: relative;z-index: 999; width:90%; background: #fff; margin: 28rpx 5%; min-height: 300rpx; border-radius: 10rpx; box-shadow:1px 2px 3px #eee ; padding: 24rpx 5%; box-sizing: border-box }
.company_d .use_pic{ width: 120rpx; height: 120rpx; border-radius: 10rpx; overflow: hidden; margin: 0 auto 10rpx}
.company_d .use_pic image{ width: 120rpx; height: 120rpx;}


.text_company{ width: 47%; text-align: right; color: #666666}
.text_line{ width: 5%; text-align: center; color: #EEEEEE; display: inline-block; vertical-align: middle}
.text_position{ width: 47%; text-align: left; color: #666666}

.company_d .text{ font-size: 24rpx; padding:0; display: inline-block; vertical-align: middle}
.use_pic{ width: 100%; text-align: center}
.use_pic image{ margin: 0 auto}

.compang_js{ font-size: 26rpx; color: #666666; margin: 16rpx 0}
.company_phone{ font-size: 28rpx;color: #333;}

.photo{ padding: 3px 3% 0 3%; position: relative;line-height: 160rpx; border-bottom: 1px solid #f7f7f7}
.photo_l { display: inline-block; vertical-align: top; font-size:26rpx;  max-width: 35%; padding-right: 20rpx; box-sizing: border-box; text-align: right; color: #333; margin-top: 26rpx;}
.photo_v{ display: inline-block; width: 72%; line-height: 100rpx; vertical-align: top; margin-top: 26rpx;}
.photo_v .bg_img{ width: 160rpx; height: 160rpx; border-radius: 10rpx; margin-right: 10rpx; }

.previewimg{
	float:left;
	width:45%;
	height:200px;
	margin:2%;
}
.previewimg image{
	width:100%;
	height:100%;
}
.under_line{ text-decoration: underline}
