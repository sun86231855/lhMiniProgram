.container{  padding: 20rpx 40rpx  20rpx 10rpx; margin:0rpx;}
.theme,
.class,
.true-class {
  width: 100%;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  box-sizing: border-box;
  margin-bottom: 20rpx;
}


.describe {
  width: 100%;
  display: flex;
  justify-content: flex-start;
  align-items: flex-start;
  box-sizing: border-box;
  margin-bottom: 20rpx;
}

.label {
  font-size: 30rpx;
  flex-shrink: 0;
  margin-right: 10rpx; width: 180rpx; display: inline-block; vertical-align: top; text-align: right; box-sizing: border-box;
}
.theme-input,
.describe-textarea {
  border: 1rpx solid #ccc;
  width: 100%;
  border-radius: 10rpx;
  font-size: 28rpx; color: #363636;
  box-sizing: border-box;
  padding:0 0 0 16rpx;
}
/* .describe-textarea{ padding: 10rpx} */

.theme-input {
  height: 60rpx; line-height: 60rpx;
}

/* 筛选 */
.select_div{
    display:flex;
    flex-direction: row;
    justify-content: space-around;
    width:100%;
    box-sizing: border-box;
    color:#333;
    margin-bottom: 20rpx;
    background: #fff
}
.select_div .tit{ 
  font-size: 30rpx;
  flex-shrink: 0;
  margin-right: 10rpx;display: inline-block; vertical-align: top; text-align: right; box-sizing: border-box; width: 180rpx;
}
.describe-textarea{ padding-top: 10rpx;}

.select_box{
  background: #fff;
  width: 100%;
  margin: -4rpx auto;
  position: relative; font-size: 28rpx;
}
.select{
  box-sizing: border-box;
  width: 100%;
  height: 60rpx;
  border:1px solid #ccc;
  border-radius: 10rpx;
  display: flex;
  align-items: center;
  padding: 10rpx 20rpx;
}
.select_text{
  font-size: 28rpx; color: #363636;
  flex: 1;
}
.select_img{
  width: 25rpx;
  height: 20rpx;
  display: block;
  transition:transform 0.3s;
}
.select_img_rotate{
  transform:rotate(180deg); 
}
.option_box{
  position: absolute; border-width: 0 1px 1px 1px; 
  top: 58rpx;
  width: 100%;
  border:1px solid #ccc;
  box-sizing: border-box;
  height: 0;
  overflow-y: auto;
  border-top: 0;
  background: #fff;
  transition: height 0.3s; color: #363636
}
.jianjie{ padding-top: 18rpx;}
.option{
  display: block;
  line-height: 40rpx;
  font-size: 28rpx;
  border-bottom: 1px solid #ccc;
  padding: 10rpx;
}
