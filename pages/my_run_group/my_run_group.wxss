/* pages/my_run_group/my_run_group.wxss */
.swiper-tab{
    width: 100%;
    border-bottom: 2rpx solid #efefef;
    text-align: center;
    height: 88rpx;
    line-height: 88rpx;
    display: flex;
    flex-flow: row;
    justify-content: space-between;
}
.swiper-tab-item{
    width: 26%; margin: 0 2%; 
    color:#434343;
    font-size: 30rpx;
}
.active{
    color:#F65959;
    border-bottom: 4rpx solid #F65959;
}
.swiper-content {
  min-height: calc(100vh - 88rpx);
}
swiper{
  text-align: center;
}
.list-content {

  justify-content: space-between;
  align-items: flex-start;
  box-sizing: border-box;
  padding: 10rpx;
  border-bottom: 2px solid #efefef;
}
.ct_v{ width: 100%; display: flex}
.left {
  width: 248rpx;
  height: 248rpx; border-radius: 16rpx;
}

.left-img {
  width: 100%;
  height: 100%;
}
.right {
  flex-grow: 1;
}
.name {
  width: 100%;
  /* display: flex;
  justify-content: space-between;
  align-items: flex-start; */
  padding:0 10rpx ;
  box-sizing: border-box; line-height: 60rpx; height: 60rpx; position: relative
}
.name-title {
  font-size: 30rpx; float: left
}
.name-status {
  font-size: 28rpx;
  color: #969696; line-height: 0.5; float: right; position: absolute; top: 16rpx; right: 0
}
.describe,
.prgress {
  width: 100%;
  display: flex;
  justify-content: flex-start;
  align-items: flex-start;
  box-sizing: border-box;
  padding:10rpx;
}
.infor{ color: #363636}
.btn-container{  width: 100%;
 
  justify-content: flex-start;
  align-items: flex-start;
  box-sizing: border-box; height: 60rpx;
  padding:10rpx;}
.describe {
  font-size: 28rpx;
}
.prgress-content {
  width: 60%;
  margin-right: 20rpx; font-size: 27rpx; color: #969696;
}
.prgress-text {
  font-size: 27rpx; color: #363636;
}
.btn {
  font-size: 27rpx;
  height: 45rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 10rpx;
  color: #fff;
  background-color: #e02e24;
  padding: 0 30rpx;
  margin-right: 10rpx; float: right
}
.reason {
  font-size: 24rpx;
  color: #ccc;
  margin-right: 10rpx;
}
