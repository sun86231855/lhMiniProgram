.nav_section_items{
   /* display:flex;*/
   text-align: center;
    flex-direction: row;
    justify-content: space-between;
    padding:30rpx 0%;
   
    position: relative;
    width: 33%; float: left;
   
}
.nav_section_items:active{
    background:#ddd;
}
.nav_section_items .section_image{
    width:100%;
    height:158rpx;display: block
}
.nav_section_items .section_image image{
    width:140rpx;
    height:140rpx;
    border-radius: 140rpx;
}
.nav_section_items .section_cont{
    width:100%;
    font-size:24rpx;
    color:#a9a9a9;
    
}
.nav_section_items .section_cont view{
    overflow:hidden;
    text-overflow: ellipsis;
    white-space:nowrap;
    display: block;
}
.nav_section_items .section_cont .section_cont_intro{
    white-space:normal;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}
.nav_section_items .section_cont .section_cont_sub{
    font-size: 30rpx;
    line-height:60rpx;
    color:#000;
    margin-bottom:10rpx;
}
.Position{ color: #333; line-height: 1}
.nav_section_items .section_cont .section_cont_name{
    font-size:24rpx;
    color:#fff;
    background: #f4625c;
    border-radius: 18px;
    width: 70%; margin: 0 11%; padding: 0 2%;
    position: relative;
    top: -6px
}
.nav_section_items .section_cont .section_cont_name .icon_vip_img{
   position: absolute; top: -5px; right: -10px; width: 16px; height: 16px;
}
.nav_section_items .section_cont .section_cont_name .icon_vip_img img{ width: 100%; height: 100%}
.nav_section_items .section_book{
  display: none;
    width:80rpx;
    height:80rpx;
    font-size:26rpx;
    border-radius:100%;
