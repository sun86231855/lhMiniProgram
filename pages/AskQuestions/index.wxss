/* pages/AskQuestions/index.wxss */
.ask_box{ padding:0 3%; width: 94%;}
.ask_box .ask_list{ display: flex;  border-bottom: 1px solid #eee}
.ask_box .ask_list picker{ color: #999;font-size: 30rpx; line-height: 80rpx;}
.ask_box .ask_list .tit{ width: 28%; font-size: 30rpx; padding-right: 10rpx; box-sizing: border-box; text-align: right; line-height: 80rpx; position: relative; color: #666 }
.ask_box .ask_list .infor{ width: 84%; line-height: 80rpx; color: #999 }
.ask_box .ask_list .infor .red_font{ color:#E02E24; padding: 0 4rpx; font-size: 30rpx; }
.ask_box .ask_list .infor .input{ width: 94%; border: none; font-size: 30rpx; padding: 0 0 0 16rpx; height: 80rpx; line-height: 80rpx; border-radius: 10rpx; margin-right: 10%; box-sizing: border-box}
.textarea{ height: 300rpx;width: 100%; border: 1px solid #efefef; font-size: 30rpx; padding: 20rpx; border-radius: 10rpx; margin-right: 10%; box-sizing: border-box; color: #999}
.tw_vie{ position: relative}
.tw_vie .tit{ padding-left: 35rpx; font-size: 30rpx; line-height: 80rpx; color: #666}
.select_box{ background: #fff; width: 96%; margin:0 4% 0 0; position: relative; z-index: 999}
.select{ box-sizing: border-box; width: 100%; height: 70rpx; border:1px solid #efefef; border-radius: 8rpx; display: flex; align-items: center; padding: 0 20rpx; font-size: 28rpx}
.select_text{ font-size: 28rpx; flex: 1; color: #363636}
.select_img{ width: 20rpx; height: 18rpx; display: block; transition:transform 0.3s;}
.select_img_rotate{ transform:rotate(180deg); }
.option_box{ position: absolute; top: 70rpx; width: 100%; border:1px solid #efefef; box-sizing: border-box; height: 0; overflow-y: auto; border-top: 0; background: #fff; transition: height 0.3s;}
.option{ display: block; line-height: 40rpx; font-size: 28rpx; border-bottom: 1px solid #efefef; padding: 10rpx; color: #363636}
.line{height:30rpx;top:26rpx;}