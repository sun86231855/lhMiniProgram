/**association.wxss**/
/**color #e02e24**/
page{ background: #f5f5f5}
.hide{
 display: none;
}
.show{ 
 display: flex;
}
.list{ width:98%;
margin: 25rpx 1% 10rpx 1%;
background:#fff;
border-bottom:1px solid #efefef;
box-shadow:2px 3px 8px #efefef;
border:1PX solid #eee;
padding:0 16rpx 0 16rpx;
box-sizing:border-box;
border-radius:10rpx;
}
.user_pic{ text-align: center; margin-top: -20rpx; position: relative}
.user_pic .people-number{ position: absolute; top: 20rpx; right: 10rpx; color: #666}
.user_pic image{ width: 84rpx; height: 84rpx;border-radius: 84rpx; position: relative; margin-left: -30rpx; border: 1px solid #ffffff}
.container{ padding:20rpx 2%; margin:0rpx;box-sizing: border-box;}

.content{
  width: 100%; font-size: 26rpx;  color: #666
}
.header{
  width: 100%; text-align: center; font-size: 30rpx;color: #666; line-height: 60rpx
}
.href { width: 100%;  align-items: right; flex-wrap: wrap; position: relative;  }
.content-title,
.content-content {
  width: 74%; display: inline-block; vertical-align: top; line-height: 60rpx;
}
.header-content{  width: 60%; display: inline-block; vertical-align: middle; line-height: 60rpx;}
.header-content {
  font-size: 28rpx; color: #363636;
}
.add {
  position: fixed; 
}
.add-img {
  width: 100%;
  height: 100%;
}
.content-title {
  font-size: 30rpx;  width: 180rpx; padding-right: 10rpx; box-sizing: border-box; text-align: right; display: inline-block; vertical-align: top; line-height: 60rpx;
}
.content-content {
  font-size: 28rpx;display: inline-block; vertical-align: middle;width: 72%; line-height: 60rpx;
}
.people {
  justify-content: flex-end;
}
.people-number {
  color: #363636; width:16%; padding-right: 10rpx; text-align: right; box-sizing: border-box;
  flex-shrink: 0;
  justify-content: flex-end;
  align-items: center;  float: right; line-height: 60rpx; font-size: 24rpx; position: absolute; top: 0; right: 0
}
.href {
  justify-content: space-around; border-top: 1px solid #eee; margin-top: 16rpx;
}
.href-friends,
.href-detail {
  font-size: 24rpx;
  height: 50rpx; line-height: 50rpx;
  justify-content: center;
  align-items: right;
  border-radius: 10rpx;
  color: #e02e24; position: relative;

  padding: 0 10rpx; float: right;
}
.href-detail { padding-right:30rpx;height: 80rpx; line-height: 80rpx;}
.href-detail .iconfont{ line-height: 60rpx; padding-left: 6rpx; position: absolute; top: 10rpx; right:0}
.alert {
  width: 100vw;
  height: 100vh;
  position: fixed;
  left: 0;
  top: 0;
  background-color: rgba(0, 0, 0, .6);
  justify-content: center;
  align-items: center;
}
.alert-content {
  width: 80%; background: #fff; padding: 100rpx 20rpx; margin-top: -200rpx; border-radius: 10rpx
}
.alert-input {
  border: 1rpx solid #efefef;
  margin-bottom: 20rpx;
  background-color: white;
  border-radius: 10rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  padding-left: 10rpx;
  height: 60rpx;
}
.alert-btn {
  width:100%;
  font-size: 28rpx;
  height: 60rpx; line-height: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 10rpx;
  color: #fff;
  background-color: #e02e24;
}
.close {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
}
.bot_v{ }
.add_but{ width: 50%; text-align: center; font-size: 28rpx; display: inline-block; vertical-align: bottom; height: 70rpx; margin: 10rpx 0;}
.creat_q{ width: 50%; text-align: center; font-size: 28rpx; display: inline-block; vertical-align: bottom; height: 70rpx; margin: 10rpx 0}
.look_detial{ font-size: 26rpx; width: 100%; text-align: right; color: #e02e24; padding:10rpx 0 }