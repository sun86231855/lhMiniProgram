/**color #e02e24**/
page{ background: #f5f5f5}
.hide{
 display: none;
}
.show{ 
 display: flex;
}
.container{ margin:0rpx; padding: 10rpx 2% 0 2%;}
.scroll-content {
 
  box-sizing: border-box;
}
.list{ width:98%;
margin:0 1% 10rpx 1%;
background:#fff;
border-bottom:1px solid #efefef;
box-shadow:2px 3px 8px #efefef;
border:1PX solid #eee;
padding:16rpx;
box-sizing:border-box;
border-radius:10rpx; position: relative
}
.right_pix{ position: absolute; top: 0; z-index: 99; right: 0; width: 84rpx; height: 72rpx;}
.right_pix image{ width: 100%; height: 100%}

.header {
  width: 80%;
   margin: 0 10%;
  font-size: 30rpx; color: #333;
  display: flex;
  justify-content: center;
  align-items: flex-start;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.status {
  font-size: 27rpx;
  color: #969696;
  position: absolute;
  top: 8rpx;
  right: -13%; 
}

.content {
  width: 90%; padding: 0 5%;
  font-size: 26rpx; color: #666666;

}

.info {
  display: flex;
  justify-content: flex-start;
  align-items: flex-start;
  flex-wrap: wrap;
  box-sizing: border-box;
  width: 100%;
  margin-bottom: 10rpx;
}

.info-content {
  width: 100%; display: flex; line-height: 60rpx; height: 60rpx;

}
.info-content .tit{ font-size: 28rpx; width: 180rpx; text-align: right; padding-right: 10rpx; display: inline-block; vertical-align: top; color: #666666}
.info-content .infor{ font-size: 28rpx; color: #666666; width: 74%; display: inline-block; vertical-align: top;}

.btn { height: 60rpx;
  width: 100%;
  box-sizing: border-box; border-top: 1px solid #eee
}

.btn-content {
  font-size: 24rpx;
  height: 60rpx; line-height: 60rpx;

  border-radius: 10rpx;
  color:#666666;
  float: right; margin-left: 36rpx;
}
.quxiao_collect{ color: #fff; background: #E02E24;  width: 128rpx; height: 42rpx; border-radius: 10rpx; float: right; font-size: 24rpx; text-align: center; line-height: 42rpx;margin-top:12rpx;
}
.btn-content .iconfont{ padding-right: 4rpx }

