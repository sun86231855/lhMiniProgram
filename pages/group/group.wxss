.alert {
  width: 100vw;
  height: 100vh;
  position: fixed; z-index: 999;
  left: 0;
  top: 0;
  background-color: rgba(0, 0, 0, .6);
  justify-content: center;
  align-items: center;
}
.alert-content {
  background: #fff; padding: 70rpx 0 0 0;   z-index: 99;
  width:540rpx;
overflow:hidden;
position:fixed;
top:50%;
left:0;

background:#f9f9f9;
