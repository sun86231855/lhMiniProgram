/* pages/askedDetial/index.wxss */
.wrap{ width: 100%; padding:0}
.practise_tit{ padding: 10rpx 3%; border-bottom: 1px solid #efefef;}
.practise_tit .tit{ position: relative; width: 100%; overflow: hidden; line-height: 46rpx}
.practise_tit .tit .left_tit{ font-size: 35rpx; font-weight: 600; width: 65%; float: left}
.practise_tit .tit .time{ float: right; width: 35%; font-size: 20rpx; color: #969696; text-align: right}
.practise_tit .list_infor{ font-size: 26rpx; padding: 20rpx 0; color: #363636 }

.practise_tit .peo_v{ display: flex; font-size: 28rpx;}
.practise_tit .peo_v .name .user_pic{ width: 50rpx; height: 50rpx; border-radius: 40rpx; display: inline-block; vertical-align: middle}
.practise_tit .peo_v .name{ width: 50%; text-align: left;font-size: 24rpx; color: #969696; line-height: 40rpx; vertical-align: middle; display: inline-block}
.practise_tit .peo_v .name .text{ line-height: 40rpx; font-size: 28rpx; color: #666; padding-left: 10rpx; vertical-align: middle; display: inline-block;}
.practise_tit .peo_v .time{width: 50%; display: inline-block; text-align: right; font-size: 24rpx; color: #969696; line-height: 40rpx; vertical-align:  bottom}
.practise_tit .peo_v .time  text{ vertical-align: middle}
/*专家回答*/
.zj_v .tit_w{ height: 40rpx; overflow: hidden; padding: 10rpx 0 20rpx 0; }
.zj_v .big_tit{ font-size: 26rpx; font-weight: bold; line-height: 40rpx; position: relative; float: left; color: #fff;}
.zj_v .zj_big_tit{}
.zj_v .big_tit .right_img{  width: 100%; height: 100%}

.zj_v{padding: 30rpx 3% 20rpx 3%;  border-bottom: 1px solid #efefef; position: relative}
.zj_v .right_ico{ position: absolute; top: 0; right: 0; width: 86rpx; height: 86rpx;}
.zj_v .right_ico image{ width: 100%; height: 100%}
.line{ height: 30rpx; top: 26rpx}
.zj_v .zj_box{}
.zj_v .zj_box .name{width: 100%; }
.zj_v .zj_box .name image{ width: 50rpx; height: 50rpx; border-radius: 100rpx; float: left}
.zj_v .zj_box .name .user{ width: 50rpx; height: 50rpx;  margin: 0 auto;  float: left; border-radius: 70rpx;}
.zj_v .zj_box .name .infor{ width: 46%; float: left; padding-left: 10rpx; box-sizing: border-box ;  line-height: 50rpx}
.zj_v .zj_box .name .text{ font-size: 26rpx; text-align: left; color: #363636; }
.zj_v .zj_box .ask_infor{width: 100%; font-size: 26rpx; padding: 16rpx 5rpx; color: #363636; box-sizing: border-box}
.zj_v .time{ text-align: left; font-size: 24rpx; color: #969696}
.zj_v .time .zan{ float: right; }
.zj_v .time .zan .iconfont{ font-size: 36rpx; position: relative; padding-right: 20rpx}
.zj_v .time .zan .text_in{ font-size: 28rpx !important; position: absolute; top: 0rpx; right: -18rpx}
/*图标*/
.ico_box{ display:  flex; padding: 24rpx 0 10rpx 0;border-top: 1px solid #efefef;  width: 100%; background: #ffffff; bottom: 0; left: 0; position: fixed}
.ico_box .ico_list{ width: 50%; text-align: center; position: relative}
.ico_box .ico_list .lin_l{ position: absolute; right:1px; top:20%; background: #eee; width: 1px; height: 60%}
.ico_box .ico_list .iconfont{ font-size: 50rpx; color: #969696; line-height: 24rpx}
.ico_box .ico_list .text{ font-size: 28rpx; color: #969696}
.on{ color: #e02e24}
.line{ left: 18rpx}
.answer{}
